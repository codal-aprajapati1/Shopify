{% schema %}
  {
  "name": "Custom Announcement",
  "settings": [
    {
      "id": "announcement",
      "label": "Announcement Bar",
      "type": "text"
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "offer-image",
          "label": "Upload Offer logo"
        },
        {
          "id": "signup-offer",
          "type": "text",
          "label": "Signup Offer"
        }
      ]
    },
    {
      "name": "Contact-Info",
      "type": "text1",
      "settings": [
        {
          "type": "image_picker",
          "id": "call-image",
          "label": "Upload Headphone Image"
        },
        {
          "type": "text",
          "id": "helplinetext",
          "label": "Helpline Text"
        },
        {
          "type": "text",
          "id": "contactnum",
          "label": "Upload Number"
        }
      ]
    },
    {
      "name": "Add to Favourites",
      "type": "text2",
      "settings": [
        {
          "type": "image_picker",
          "id": "heart-image",
          "label": "Upload Headphone Image"
        },
        {
          "id": "add-fav",
          "type": "text",
          "label": "Add to Favourite"
        }
      ]
    },
    {
      "name": "Signup",
      "type": "text3",
      "settings": [
        {
          "id": "signimage",
          "type": "image_picker",
          "label": "Upload Sign In"
        },
        {
          "id": "signin",
          "type": "text",
          "label": "Sign In"
        }
      ]
    }
  ]
}
{% endschema %}