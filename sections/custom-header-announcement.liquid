{{ 'custom-header-announcement.css' | asset_url | stylesheet_tag }}

<div class="announcement-container ">
  <div class="announcement-bar page-width">
  {%  for block in section.blocks %}
      {% if block.type == "text" %}
        <div class="offer-container">
          <img src="{{ block.settings.offer-image | img_url }}" style="width: 20px">
          {{ block.settings['signup-offer'] -}}
          <span class="show-options">{% render 'icon-caret' %}</span>
        </div>
      {% elsif block.type == "text1" %}
        <div class="customer-care">
          {% render 'icon-headphone' %}{{ block.settings.helplinetext }} 
          <a href="tel: {{ block.settings.contactnum }}">{{ block.settings.contactnum }}</a>
        </div>
      {% elsif block.type == "text2" %}
        <div class="add-fav">
          {%  render 'icon-render' %}
          {{ block.settings['add-fav'] }}
        </div>
      {% elsif block.type == "text3" %}
        <div class="signup">
        <img src="{{ block.settings.signimage | image_url }}" style="width: 20px;">
          {{ block.settings.signin }}
        </div>
      {% endif %}
  {% endfor %}
</div>
</div>

