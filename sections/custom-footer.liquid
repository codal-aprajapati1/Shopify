{{ 'custom-footer.css' | asset_url | stylesheet_tag }}

<div class="footer-conatiner">
<footer class="footer page-width">
  <div class="upper">
    <div class="left-cont">
      {% for block in section.blocks %}
      {% if block.type == 'image' %}
        <div class="logo-cont">
           <img src="{{ block.settings.image | img_url}}">
        </div>
      <div class="offer-cont">
        <p>{{ block.settings.text }}</p>
      </div>
      {% endif %}
    {% endfor %}
        
    </div>
    <div class="right-cont">
        <form>
          <input type="email" placeholder="Email Address">
          <button type="submit">Submit</button>
        </form>
    </div>
  </div>
  
  <div class="middle">
    <div class="footer-top">
  {% for block in section.blocks %}
    {% if block.type == 'navigation1' %}
      <div class="footer-column first-col accordion">
        <p class="accordion-header">{{ block.settings.linklist.title }}</p> 
        <ul class="activeList accordion-content">
          {% for link in block.settings.linklist.links %}
            <li class="item"><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    {% elsif block.type == 'navigation2' %}
      <div class="footer-column left-nav last-col accordion">
        <p class="accordion-header">{{ block.settings.linklist.title }}</p> 
        <ul class="accordion-content">
          {% for link in block.settings.linklist.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    {% elsif block.type == 'navigation3' %}
      <div class="footer-column right-nav last-col accordion">
        <p class="accordion-header">{{ block.settings.linklist.title }}</p> 
        <ul class="accordion-content">
          
          {% for link in block.settings.linklist.links %}
            <li>
            <span><img src="{{ block.link.image | image_url}}" style="width:20px"></span>
              <a href="tel:{{ link.title }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  {% endfor %}
</div>
  </div>

  
  <div class="bottom">
    {% for block in section.blocks %}
        {% if block.type == 'navigation' %}
          <div class="footer-bottom">
            {% for link in block.settings.linklist.links %}
                <li><a href="link.url">{{ link.title }}</a></li>
            {% endfor %}
          </div>
          <div class="copyright-cont">
            <p >{{ block.settings.copyright }}</p>
          </div>
    {% endif %}
  {% endfor %}
  </div>
</footer>
</div>
<script>
  const accordions = document.querySelectorAll('.accordion');

  accordions.forEach(accordion => {
    const header = accordion.querySelector('.accordion-header');
    const content = accordion.querySelector('.accordion-content');

    header.addEventListener('click', () => {
      content.classList.toggle('active');
    });
  });
</script>
