{% comment %} {% section 'custom-header-announcement' %}} {% endcomment %}

{{ 'custom-mega-menu.css' | asset_url | stylesheet_tag }}
<div class="main-cont">
  <div class="main-nav-container header header--middle-left header--mobile-center header--has-menu--has-account page-width">
    <nav class="mega-menu header__inline-menu">
      {% for block in section.blocks %}
        {% if block.type == 'text' %}
          <div class="logo-container">
            <img src="{{ block.settings.logoimage | image_url }}" style="width:75px">
          </div>

        {% elsif block.type == 'navbarlinks' %}
          <div class="navbar-container search-effect">
            <ul>
              {% for link in block.settings.linklist.links %}
                <li class="search-effect">
                  {% if link != blank %}
                    <a href="{{ link.url }}">
                      {{- link.title -}}
                      <span id="careticon"> {% render 'icon-caret' %}</span></a
                    >
                  {% endif %}
                  <div class="outer-div">
                    <div class="page-width">
                      {% comment %} <a><span>{{- link.title | escape -}}</span></a> {% endcomment %}
                      <div class="grid-cont">
                        {% for block in section.blocks %}
                          {% if block.type == 'first_block' %}
                            {% if block.settings.mega_menu_name == link.title %}
                              <div class="b1 grid-item">
                                <div class="image-container">
                                  <img
                                    src="{{ block.settings.product_image | image_url }}"
                                    alt="img to be displayed here"
                                    height="100%"
                                    width="100%"
                                  >
                                </div>
                                <h4>{{ block.settings.enter_product_title }}</h4>
                                <p>{{ block.settings.enter_product_description }}</p>
                                <a href="{{ block.settings.enter_button_url }}"
                                  ><button type="submit" class="submit-btn">
                                    {{ block.settings.enter_button_text }}
                                  </button></a
                                >
                              </div>
                            {% endif %}
                          {% elsif block.type == 'blockdata' %}
                            {% if block.settings.mega_menu_name == link.title %}
                              <div class="b2 grid-item">
                                <div class="image-container">
                                  <img
                                    src="{{ block.settings.product_image | image_url }}"
                                    alt="img to be displayed here"
                                    height="100%"
                                    width="100%"
                                  >
                                </div>
                                <h4>{{ block.settings.enter_product_title }}</h4>
                                <p>{{ block.settings.enter_product_description }}</p>
                              </div>
                            {% endif %}
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                  </div>
                </li>
              {% endfor %}
            </ul>
            <span class="burger-bar">{% render 'icon-hamburger' %}</span>
          </div>

        {% elsif block.type == 'text1' %}
          <div class="find-my-solution search-effect">
            <a href="#" class="find-solution">{{ block.settings.buttontext }}</a>
          </div>
        {% elsif block.type == 'search-icon' %}
          <div class="search-bar">
            <form>
              <div class="form-container">
                <img src="{{ block.settings.search-icon | image_url  }}" style="width:20px">
                <input type="text" placeholder="     search">
                <div class="main-search-cont">
                  <div class="ful-width-search">
                    <div class="sub-search-cont page-width">
                      <div class="suggestion-container">
                        <h1>Popular Search Terms</h1>
                        <ul>
                          <li>AirMini <span>&gt;</span></li>
                          <li>AirSense10 <span>&gt;</span></li>
                          <li>ResMed <span>&gt;</span></li>
                          <li>AirFit <span>&gt;</span></li>
                          <li>CPAP Mask <span>&gt;</span></li>
                        </ul>
                      </div>
                      <div class="recommend-cont">
                        {% for block in section.blocks %}
                          {% if block.type == 'textsuggestion' %}
                            <div class="quest">
                              {{ block.settings['question-heading'] }}
                            </div>
                            <div class="display-row">
                              <div class="suggest">
                                <p>{{ block.settings.option1 }}</p>
                                <a href="{{ block.settings.option1url }}">&gt;</a>
                              </div>
                              <div class="suggest">
                                <p>{{ block.settings.option2 }}</p>
                                <a href="{{ block.settings.option2url }}">&gt;</a>
                              </div>
                              <div class="suggest">
                                <p>{{ block.settings.option3 }}</p>
                                <a href="{{ block.settings.option3url }}">&gt;</a>
                              </div>
                              <div class="suggest">
                                <p>{{ block.settings.option4 }}</p>
                                <a href="{{ block.settings.option4url }}">&gt;</a>
                              </div>
                            </div>
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="close-container"><span class="close-btn">Close</span></div>
            </form>
          </div>

        {% elsif block.type == 'cartimage' %}
          <div class="cart-btn search-effect">
            <a href="#">{% render 'icon-cart' %}</a>
          </div>
        {% endif %}
      {% endfor %}
    </nav>
  </div>
</div>

<div class="background-img-container ">
  {% for block in section.blocks %}
    {% if block.type == 'background' %}
      <img src="{{ block.settings.backgroundimage | image_url }}" width="100%" height="100%">
      <div class="image-data-cont">
        <p class="img-heading" style="color:white">{{ block.settings.imageheading }}</p>
        <p class="img-description">{{ block.settings.imagedescription }}</p>
        <div class="btn-container">
          <a href="{{ block.settings.firstbuttonurl}}" class="first-btn">{{ block.settings.firstbuttontext }}</a>
          <a href="{{ block.settings.secondbuttonurl }}" class="second-btn">{{ block.settings.secondbuttontext }}</a>
        </div>
      </div>
    {% elsif block.type == 'textcontainer' %}
      <div class="blocks-container page-width">
        <div class="image-below-container">
          <div class="question-container">
            <p>{{ block.settings['question-heading'] }}</p>
          </div>
          <div class="options">
            <p>{{ block.settings.option1 }}</p>
            <a href="{{ block.settings.option1url }}">&gt;</a>
          </div>
          <div class="options">
            <p>{{ block.settings.option2 }}</p>
            <a href="{{ block.settings.option2url }}">&gt;</a>
          </div>
          <div class="options">
            <p>{{ block.settings.option3 }}</p>
            <a href="{{ block.settings.option3url }}">&gt;</a>
          </div>
          <div class="options">
            <p>{{ block.settings.option4 }}</p>
            <a href="{{ block.settings.option4url }}">&gt;</a>
          </div>
          <div class="options last-option">
            <p>{{ block.settings.option5 }}</p>
            <a href="{{ block.settings.option5url }}">Reorder</a>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

<script>
  $(document).ready(function () {
    // alert();
    $('.main-cont')
      .mouseenter(function () {
        $(this).addClass('active1');
        $('.announcement-container').addClass('active-text-white');
        $('.announcement-bar').addClass('active-text-white');
        $('.navbar-container ul li a').addClass('active-only-text-black');
        $('.mega-menu .find-my-solution a').addClass('background-black');
        $('.cart-btn a svg').addClass('active-svg');

        $(document).on('click', 'input', function () {
          $('.search-effect').hide();
          $('.logo-container').addClass('logo-hide');
          $('.search-bar').addClass('adjust-margin');
          $('.mega-menu .search-bar form input').addClass('slideeffect');
          $('.close-btn').css('display', 'flex');
          $('.main-search-cont').css('display', 'block');
          $('.main-search-cont .sub-search-cont .recommend-cont').addClass('recommend-cont-active');
          $(document).on('click', '.close-btn', function () {
            $('.search-effect').show();
            $('.logo-container').removeClass('logo-hide');
            $('.main-search-cont').css('display', 'none');
            $('.mega-menu .search-bar form input').removeClass('slideeffect');
            $('.close-btn').css('display', 'none');
            $('.search-bar').removeClass('adjust-margin');
            $('.findmy');
            $('.main-search-cont .sub-search-cont .recommend-cont').removeClass('recommend-cont-active');
          });
        });

        $(document).on('click', '.burger-bar', function () {
          $('.mega-menu .navbar-container ul').addClass('convert-block');
        });

        $('.navbar-container ul li')
          .mouseenter(function () {
            $('.outer-div').removeClass('active');
            $(this).find('.outer-div').addClass('active');
            $(this).find('#rotate').css('transform', 'rotate(180deg)');
          })
          .mouseleave(function () {
            $(this).find('#rotate').css('transform', 'rotate(0deg)');
          });
      })
      .mouseleave(function () {
        $('.announcement-bar').removeClass('active-text-white');
        $('.mega-menu .find-my-solution a').removeClass('background-black');
        $('.announcement-container').removeClass('active-text-white');
        $('.navbar-container ul li a').removeClass('active-only-text-black');
        $(this).removeClass('active1');
        // $('.cart-btn svg').removeClass('active-text-black');
        $('.navbar-container ul li').find('.outer-div').removeClass('active');
        $('.cart-btn a svg').removeClass('active-svg');
      });
  });
</script>

