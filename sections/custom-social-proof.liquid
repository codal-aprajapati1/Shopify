{{ 'custom-social-proof.css' | asset_url | stylesheet_tag }}
<div class="social-proof-container">
  <div class="social-proof-subcontainer page-width">
      
    <div class="animation-container">
      <div class="text-container"></div>
      <div class="text-customers"></div>
    </div>

    {% for block in section.blocks %}
      {% if block.type == 'socialProof' %}
        <div class="proof-container">
          <div class="proof-container">
            <div class="proof-card">
             <p class="card-heading"></p>
             <p class="card-description"></p>
              <a href="">Chat Now</a>
            </div>
          </div>
          
          <div class="slider-container"></div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>




{% schema %}
{
  "name": "Social Proof",
  "settings": [
    {
      "type": "text",
      "label": "Enter Page Heading",
      "id": "page_heading"
    },
    {
      "type": "text",
      "label": "Enter Number of Users served",
      "id": "serveduser"
    }
  ],
  "blocks": [
    {
      "type": "socialProof",
      "name": "Social Proof",
      "settings": [
        {
          "type": "text",
          "label": "Enter card heading",
          "id": "card_heading"
        },
        {
          "type": "text",
          "label": "Enter card description",
          "id": "card_description"
        },
        {
          "type": "url",
          "label": "Enter button url",
          "id": "button_url"
        },
        {
          "type": "text",
          "label": "Enter service type",
          "id": "service_type"
        },
        {
          "type": "video",
          "label": "Enter video URL",
          "id": "slider_video"
        }
      ]
    }
  ],
  "presets":[
        {
          "name": "Social Proof"
        }
      ]
}
{% endschema %}
