{{ 'custom-best-sellers.css' | asset_url | stylesheet_tag}}

<div class="best-seller-container">
  <div class="best-seller-sub-container page-width">
    <div class="center-container">
    <div class="Page-headig-container">
      <h2>{{ section.settings.sect_heading }}</h2>
    </div>
    <div class="best-seller-slider">
          <div class="slider-navbar"><h3>{{ section.blocks.settings.nav-text }}</h3></div>
          <div class="actual-slider-container">
      {% for block in section.blocks %}
        {% if block.type == 'navlinks' %}
            <div class="slider-container1 each-slide">
              <div class="product-image-cont">
                <img src="{{ block.settings.product.featured_image | image_url }}" width=100% height=100%>
              </div>
              <div class="info-container">
                <!-- <div class="reviews-container">{{block.settings.product  }}</div> -->
                <div class="title-container">{{ block.settings.product.title }}</div>
                <div class="description-container">{{ block.settings.product.description }}</div> 
                <div class="button-container">
                  <a href="{{ block.settings.product.url }}"> Shop now <span class="price-container">{{ block.settings.product.price }}</span></a>
                </div>
              </div>
            </div>
          {% endif %}
      {% endfor %}
          </div>
  </div>
    </div>
  </div>
</div>

<script>
  $('.actual-slider-container').slick({
    dots:false,
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 1,
  });
</script>

{% schema %}
  {
    "name": "Best Sellers",
    "tag": "section",
    "settings": [
      {
      "type": "text",
      "label": "Enter the heading of the section",
      "id": "sect_heading"
      }
    ],
    "blocks" : [
      {
       "type": "navlinks",
       "name": "Enter the navlinks",
       "settings":[
         {
           "type" : "text",
           "id": "nav-text",
           "label": "Enter the name of the navlink"
         },
         {
           "type" : "product",
           "id": "product",
           "label": "Select the product"
         }
       ] 
      }
    ],
  "presets":[
    {
      "name":"Best Sellers"
    }
  ]
  }
{% endschema %}